<div class="container">
  <% hidden = "(Скрытый)" if @question.hidden? %>
  <h2 class="title-lg mb">Вопрос№<%= @question.id %> <%= hidden %></h2>

  <p class="mb-sm"><%= @question.body %></p>
  <p>ID Пользователя: <b><%= @question.user_id %></b></p>

  <div class="mt">
    <%= link_to fa_icon('pencil'), edit_question_path(@question), title: 'Изменить вопрос' %>
    <%= button_to fa_icon('trash-o'), question_path(@question), method: :delete, title: 'Удалить вопрос',
                  form: {data: {turbo_confirm: 'Точно удалить вопрос?'}} %>
    <%= button_to fa_icon('eye'), hide_question_path(@question), method: :put, title: 'Скрыть/вернуть вопрос' %>
  </div>

  <p class="mt"><%= link_to "Все вопросы", questions_path %></p>
</div>
